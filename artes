<script>
function calcularFrete() {
    let cep = document.getElementById("cep").value;
    if (cep.length !== 8) {
        document.getElementById("freteResultado").innerHTML = "CEP inválido";
        return;
    }
    // Simulação simples – envio fixo
    let valorFrete = 29.90;
    document.getElementById("freteResultado").innerHTML =
        "Envio para " + cep + ": R$ " + valorFrete.toFixed(2);
}
</script>

